@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary"><i class="bi bi-speedometer2"></i> Yönetim Paneli</h2>
            <p class="text-muted">Hoşgeldiniz, sistem durumunu buradan kontrol edebilirsiniz.</p>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6 col-lg-3">
            <div class="card bg-primary text-white h-100 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Toplam İlan</h6>
                        <h2 class="display-4 fw-bold my-2">@ViewBag.IlanSayisi</h2>
                    </div>
                    <i class="bi bi-building display-4 opacity-50"></i>
                </div>
                <div class="card-footer bg-primary border-0">
                    <a asp-controller="Property" asp-action="Index" class="text-white text-decoration-none small stretched-link">
                        İlanları Yönet <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-success text-white h-100 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Kategoriler</h6>
                        <h2 class="display-4 fw-bold my-2">@ViewBag.KategoriSayisi</h2>
                    </div>
                    <i class="bi bi-tags display-4 opacity-50"></i>
                </div>
                <div class="card-footer bg-success border-0">
                    <a asp-controller="Category" asp-action="Index" class="text-white text-decoration-none small stretched-link">
                        Kategorileri Yönet <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-warning text-dark h-100 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Hızlı İşlem</h6>
                        <h4 class="fw-bold my-2">İlan Ekle</h4>
                    </div>
                    <i class="bi bi-plus-circle-fill display-4 opacity-50"></i>
                </div>
                <div class="card-footer bg-warning border-0">
                    <a asp-controller="Property" asp-action="Create" class="text-dark text-decoration-none small stretched-link fw-bold">
                        Yeni İlan Oluştur <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card bg-secondary text-white h-100 shadow">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="card-title mb-0">Site Görünümü</h6>
                        <h4 class="fw-bold my-2">Anasayfa</h4>
                    </div>
                    <i class="bi bi-globe display-4 opacity-50"></i>
                </div>
                <div class="card-footer bg-secondary border-0">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-white text-decoration-none small stretched-link">
                        Siteye Git <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-primary">Yönetim Kısayolları</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-outline-success">
                            <i class="bi bi-folder-plus"></i> Yeni Kategori Ekle
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline-dark">
                            <i class="bi bi-person-gear"></i> Profil Ayarları
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>