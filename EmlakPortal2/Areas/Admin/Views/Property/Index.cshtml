@model IEnumerable<Property>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">İlan Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Property" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni İlan Ekle
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>İlan Başlığı</th>
                <th>Fiyat</th>
                <th>Kategori</th>
                <th>Oda</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Price.ToString("c")</td>
                    <td>@obj.Category.Name</td>
                    <td>@obj.RoomCount</td>
                    <td>@(obj.IsSold ? "Satıldı" : "Yayında")</td>
                    <td>

                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning btn-sm text-dark me-2" title="Düzenle">
                                <i class="bi bi-pencil-square"></i> Düzenle
                            </a>
                            <a asp-controller="Property" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"> 
                                <i class="bi bi-trash-fill"></i> Sil
                                </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>