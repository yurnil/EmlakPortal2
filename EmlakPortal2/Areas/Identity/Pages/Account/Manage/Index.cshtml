@page
@model IndexModel
@{
    ViewData["Title"] = "Profilim";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-4 text-center mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.CurrentProfilePicture))
                {
                    <img src="@Model.CurrentProfilePicture" class="img-fluid rounded-circle mb-3 border border-3 border-primary" style="width: 150px; height: 150px; object-fit: cover;" alt="Profil Fotosu">
                }
                else
                {
                    <img src="https://via.placeholder.com/150?text=Foto+Yok" class="img-fluid rounded-circle mb-3 border border-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Varsayılan">
                }
                <h5 class="card-title fw-bold">@Model.Input.Name @Model.Input.Surname</h5>
                <p class="text-muted small">@Model.Username</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username">Kullanıcı Adı</label>
            </div>

            <div class="mb-3 p-3 border rounded bg-light">
                <label asp-for="Input.ProfilePicture" class="form-label fw-bold text-primary">
                    <i class="bi bi-camera-fill"></i> Profil Fotoğrafı Yükle
                </label>
                <input asp-for="Input.ProfilePicture" type="file" class="form-control" accept="image/*" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>

            <div class="row g-2">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Name" class="form-control" />
                        <label asp-for="Input.Name">Adınız</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Surname" class="form-control" />
                        <label asp-for="Input.Surname">Soyadınız</label>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber">Telefon Numarası</label>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">
                <i class="bi bi-check-circle"></i> Kaydet
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}