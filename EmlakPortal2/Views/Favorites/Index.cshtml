@model List<Property>

<div class="container mt-5">
    <h2 class="text-primary mb-4"><i class="bi bi-heart-fill text-danger"></i> Favori İlanlarım</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            Henüz hiç favori ilanınız yok. <a asp-controller="Home" asp-action="Index">İlanlara göz atın!</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                        <div style="position: relative;">
                            <img src="@(item.PropertyImages != null && item.PropertyImages.Any() ? item.PropertyImages.First().ImageUrl : "https://via.placeholder.com/500x400")"
                                 class="card-img-top" style="height: 250px; object-fit: cover;" alt="İlan Resmi">

                            <span class="badge bg-primary position-absolute top-0 start-0 m-2">@item.Category.Name</span>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title text-dark">@item.Title</h5>
                            <h4 class="text-primary fw-bold">@item.Price.ToString("c")</h4>
                            <p class="text-muted"><i class="bi bi-geo-alt"></i> @item.Address</p>

                            <div class="d-flex justify-content-between border-top pt-3">
                                <span><i class="bi bi-door-open"></i> @item.RoomCount Oda</span>
                                <span><i class="bi bi-arrows-fullscreen"></i> @item.Area m²</span>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0 text-center pb-3">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary w-100">Detayları Gör</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>