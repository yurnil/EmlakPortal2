@model Property

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center py-4">
            <h1 class="display-6">@Model.Title</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-center">
                    @if (Model.PropertyImages != null && Model.PropertyImages.Count > 0)
                    {
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.PropertyImages.Count; i++)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true"></button>
                                }
                            </div>

                            <div class="carousel-inner">
                                @{
                                    int sayac = 0;
                                }
                                @foreach (var img in Model.PropertyImages)
                                {
                                    <div class="carousel-item @(sayac == 0 ? "active" : "")">
                                        <img src="@img.ImageUrl" class="d-block w-100 rounded border" style="height: 400px; object-fit: cover;" alt="@Model.Title">
                                    </div>
                                    sayac++;
                                }
                            </div>

                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                                <span class="visually-hidden">Önceki</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon bg-dark rounded-circle" aria-hidden="true"></span>
                                <span class="visually-hidden">Sonraki</span>
                            </button>
                        </div>
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/500x400?text=Resim+Yok" class="img-fluid rounded" />
                    }
                </div>

                <div class="col-md-6">
                    <h3 class="text-info">@Model.Price.ToString("c")</h3>
                    <p class="text-muted"> <i class="bi bi-geo-alt-fill"></i> @Model.Address</p>

                    <hr />

                    <div class="row text-center mb-3">
                        <div class="col-4 border-end">
                            <h5 class="fw-bold">@Model.RoomCount</h5>
                            <small class="text-muted">Oda</small>
                        </div>
                        <div class="col-4 border-end">
                            <h5 class="fw-bold">@Model.Area m²</h5>
                            <small class="text-muted">Alan</small>
                        </div>
                        <div class="col-4">
                            <h5 class="fw-bold">@Model.Category.Name</h5>
                            <small class="text-muted">Kategori</small>
                        </div>
                    </div>

                    <hr />

                    <h5 class="text-dark">Açıklama</h5>
                    <p class="card-text text-secondary">
                        @Html.Raw(Model.Description)
                    </p>
                    <h5 class="mt-4 text-dark border-bottom pb-2">İlan Özellikleri</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-building"></i> Bina Yaşı:</span>
                                    <span class="fw-bold">@Model.BinaYasi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-layers"></i> Kat:</span>
                                    <span class="fw-bold">@Model.BulunduguKat / @Model.KatSayisi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-grid"></i> Balkon:</span>
                                    <span class="fw-bold">@Model.BalkonSayisi</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-fire"></i> Isıtma:</span>
                                    <span class="fw-bold">@Model.IsitmaTipi</span>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-person"></i> Durumu:</span>
                                    <span class="fw-bold">@Model.KullanimDurumu</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-lamp"></i> Eşyalı:</span>
                                    <span class="fw-bold">@(Model.EsyaliMi ? "Evet" : "Hayır")</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="bi bi-houses"></i> Site İçinde:</span>
                                    <span class="fw-bold">@(Model.SiteIcerisinde ? "Evet" : "Hayır")</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Index" class="btn btn-secondary w-100 btn-lg">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                        </div>
                        <div class="col-12 col-md-6 pb-1">
                            <a href="https://wa.me/905469105391?text=Merhaba, @Model.Title ilanı hakkında bilgi almak istiyorum."
                               target="_blank"
                               class="btn btn-success btn-lg px-4">
                                <i class="bi bi-whatsapp"></i> WhatsApp ile İletişime Geç
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>