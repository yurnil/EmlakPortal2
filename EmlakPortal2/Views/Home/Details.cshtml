@model Property

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary text-white text-center py-4">
            <h1 class="display-6">@Model.Title</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 text-center">
                    @if (Model.PropertyImages != null && Model.PropertyImages.Count > 0)
                    {
                        <img src="@Model.PropertyImages.FirstOrDefault().ImageUrl" class="img-fluid rounded border" alt="@Model.Title" style="max-height: 400px; width: auto;" />
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/500x400?text=Resim+Yok" class="img-fluid rounded" />
                    }
                </div>

                <div class="col-md-6">
                    <h3 class="text-info">@Model.Price.ToString("c")</h3>
                    <p class="text-muted"> <i class="bi bi-geo-alt-fill"></i> @Model.Address</p>

                    <hr />

                    <div class="row text-center mb-3">
                        <div class="col-4 border-end">
                            <h5 class="fw-bold">@Model.RoomCount</h5>
                            <small class="text-muted">Oda</small>
                        </div>
                        <div class="col-4 border-end">
                            <h5 class="fw-bold">@Model.Area m²</h5>
                            <small class="text-muted">Alan</small>
                        </div>
                        <div class="col-4">
                            <h5 class="fw-bold">@Model.Category.Name</h5>
                            <small class="text-muted">Kategori</small>
                        </div>
                    </div>

                    <hr />

                    <h5 class="text-dark">Açıklama</h5>
                    <p class="card-text text-secondary">
                        @Html.Raw(Model.Description)
                    </p>

                    <div class="row mt-4">
                        <div class="col-12 col-md-6 pb-1">
                            <a asp-action="Index" class="btn btn-secondary w-100 btn-lg">
                                <i class="bi bi-arrow-left"></i> Listeye Dön
                            </a>
                        </div>
                        <div class="col-12 col-md-6 pb-1">
                            <a href="#" class="btn btn-success w-100 btn-lg">
                                <i class="bi bi-whatsapp"></i> İletişime Geç
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>